{
  "compilerOptions": {
    "target": "es2022",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist/lib/",
    "sourceMap": true,
    "jsx": "react",
    "preserveValueImports": false,
    "importsNotUsedAsValues": "remove",
  },
  "exclude": ["node_modules", "dist"],
  "baseUrl": "./",
  "paths": {
    "@core/ui": ["src/ui"],
  },
  "typeRoots": [
    "node_modules/@types",
    "src/types"
  ],
  "files": [
    "typings.d.ts"
  ]
}
