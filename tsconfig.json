{
  "compilerOptions": {
    "target": "es2022",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist/lib/",
    "sourceMap": true,
    "jsx": "react"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"],
  "files": [
    "./typings.d.ts"
  ]
}